@model EmployeeTest.Models.Employee

@{
    ViewBag.Title = "Удалить";
}

<h2>Удалить</h2>

<h3>Вы уверены, что хотите удалить сотрудника @Model.FirstName @Model.LastName?</h3>
<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Фамилия
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Birthday)
        </dd>
        
        <dt>
            Начальник
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Head.FirstName) @Html.DisplayFor(model => model.Head.LastName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Подтвердить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
