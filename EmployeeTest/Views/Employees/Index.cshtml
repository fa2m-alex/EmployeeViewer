@model IEnumerable<EmployeeTest.Models.Employee>

@{
    ViewBag.Title = "Сотрудники";
}

<h2>Сотрудники</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Найти: @Html.TextBox("SearchString")
        <input type="submit" value="Поиск" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            @Html.ActionLink("Фамилия", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Дата рождения", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Начальник
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @String.Format("{0:dd/MM/yyyy}", item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Head.FirstName) @Html.DisplayFor(modelItem => item.Head.LastName)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Детали", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
